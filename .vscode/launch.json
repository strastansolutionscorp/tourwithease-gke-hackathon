{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Next.js Frontend",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/frontend/node_modules/.bin/next",
            "args": ["dev"],
            "cwd": "${workspaceFolder}/frontend",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Launch Node.js API Gateway",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/backend/api-gateway/dist/index.js",
            "preLaunchTask": "build-api-gateway",
            "cwd": "${workspaceFolder}/backend/api-gateway",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development",
                "PORT": "8000"
            }
        },
        {
            "name": "Launch Python ADK Agents",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/api-gateway/python-agents/main.py",
            "cwd": "${workspaceFolder}/backend/api-gateway/python-agents",
            "console": "integratedTerminal"
        }
    ]
}